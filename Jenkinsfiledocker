pipeline {
    agent none
    stages {
        stage ('build stage') {
            agent { label 'build' }
            steps {
                sh 'docker build -t mytomimage:${build_version} .'
            }
        }
        stage ('publish stage') {
            agent {label 'build'}
            steps {
                sh 'docker login -u waliuddin -p Wali@1234'
                sh 'docker tag mytomimage:${build_version} waliuddin/tomimage:${build_version}'
                sh 'docker push waliluddin/tomimage:${build_version}'
            }
        }
        stage ('deploy stage') {
            agent { label 'deploy' }
            steps {
                sh 'docker rm -f container1'
                sh 'docker run -d -p 8080:8080 --name container1 waliuddin/tomimage:${build_version}'
            }
        }
    }
}
