pipeline {
   agent none
    stages {
      stage ('my build') {
        agent { node { label 'build' } }
        steps {
         sh 'echo ${BUILD_VERSION}' 
         sh 'docker build -t tomcatimage .'
        }
      }
      stage (publish) {
        agent { node { label 'build' } }
          steps {
            sh 'echo ${BUILD_VERSION}'
            sh 'docker login -u waliuddin -p Wali@8792'
            sh 'docker tag tomcatimage waliuddin/mytomcat:latest'
            sh 'docker push waliuddin/mytomcat:latest'
        }
      } 
    stage ('my deploy') {
      agent { node { label 'deploy' } }
       steps {
        sh 'docker pull waliuddin/mytomcat:latest'
        sh 'docker rm -f container1' 
        sh 'docker run -d -p 8090:8080 --name container1 waliuddin/mytomcat:latest'
      }
    } 
  }
}
